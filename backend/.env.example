# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/collabzy
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/collabzy

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For production: https://your-frontend-domain.com

# YouTube Data API (Get from Google Cloud Console)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Instagram Graph API (Future - requires Facebook App approval)
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Email Configuration (Future - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Admin Configuration
ADMIN_EMAIL=admin@collabzy.com
ADMIN_PASSWORD=admin_secure_password
